<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
		<h2>
			<%= pluralize(@user.errors.count, "error") %> prohibited
			this user from being saved:
		</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
	  		<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
  <div class="user_page">
    <h1>Sign up here</h1>

    <div class="user_field">
      <%= f.text_field :name, :class => "input_field", :placeholder => "Name" %>
    </div>

    <div class="user_field">
      <%= f.email_field :email, :class => "input_field", :placeholder => "Email" %>
    </div>

    <div class="user_field">
      <%= f.password_field :password, :class => "input_field", :placeholder => "Password" %>
    </div>

    <div class="user_field">
      <%= f.password_field :password_confirmation, :class => "input_field", :placeholder => "Password Confirmation" %>
    </div>

    <%= f.submit %>

 <% end %>
</div>
