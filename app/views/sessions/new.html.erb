<h1>Please login for access</h1>
<%= @errors %>

<div class="login">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email %> <br>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log in" %>
    <% end %>
  <div class="new_user">
    <p>New user? <%= link_to "Create a new account", signup_path %></p>
  </div>
</div>
